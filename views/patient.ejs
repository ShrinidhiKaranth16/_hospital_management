<%- include("partial/header")%>
<br>
<br>
	<div class="container">
		<header class="jumbotron">
		<h1>Here are the patients</h1>
			<a  class="btn btn-primary" href="/patients/new">Press here to add a new Patient</a>
		</header>
		<div class="row">
		<div class="col-lg-12">
			<h3>
				Patients:
			</h3>
		</div>
		</div>
	
		<div class="row text-center" style="display:flex ;flex-wrap:wrap">
								<% patient.forEach(function(docs){%>
								<div class="col-lg-4 col md-6 col-sm-12">
									<div class="thumbnail">
										<img  id="doc" src = "<%= docs.image%>">
										<div class="caption">
											<h4><%= docs.name%></h4>
										</div>
	<a href="/patients/<%=docs._id%>" class="btn btn-primary btn-sm">More Info</a>
									</div>
								</div>
								<%});%>
		</div>
</div>
<%- include("partial/footer")%>